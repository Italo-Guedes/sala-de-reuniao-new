<header class="content__title">
  <h1>
    <%= t('helpers.submit.general.show', model: t('activerecord.models.space.one')) %>
  </h1>

  <div class="actions">
    <%= link_to '', (controller_name == "versions" ? index_versions_path(model_name: "spaces") : spaces_path), title: t('activerecord.link.back_to_list'), class: 'actions__item zmdi zmdi-arrow-left' %>
    <%= link_to '', '', title: t('activerecord.link.refresh'), class: 'actions__item zmdi zmdi-refresh-alt' %>
    <%= link_to '', edit_space_path(@space), title: t('activerecord.link.edit'), class: 'actions__item zmdi zmdi-edit' if can?(:edit, @space) && controller_name != 'versions' %>
  </div>
</header>
<div class="card">
  <div class="card-body card-padding record-show">
    <div class="row">
        <div class="col-12">
          <label class="fg-label"><%= t('activerecord.attributes.space.name') %></label><br/>&nbsp;
          <%= @space.name %>
        </div>
        <div class="col-12">
          <label class="fg-label"><%= t('activerecord.attributes.space.description') %></label><br/>&nbsp;
          <%= @space.description %>
        </div>
    </div>
    <div class="row">
      <div class="col-sm-6">
        <label class="fg-label"><%= t('activerecord.attributes.space.created_at') %></label><br/>&nbsp;
        <%= @space.created_at %>
      </div>
      <div class="col-sm-6">
        <label class="fg-label"><%= t('activerecord.attributes.space.updated_at') %></label><br/>&nbsp;
        <%= @space.updated_at %>
      </div>
    </div>
  </div>
</div>
<%= render partial: "layouts/record_changes", locals: { :@object => @space } %>