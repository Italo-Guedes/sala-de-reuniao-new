<%= semantic_form_for @reservation, html: { class: 'form-row' } do |f| %>
  <%= f.input :space, class: 'col-12' %>
  <%= f.input :date_start, class: 'col-12' %>
  <%= f.input :description, class: 'col-12' %>
  <%= f.action :submit, label: t('activerecord.link.save'), as: :button, class: 'col-12', html: { 'data-disable-with' => t('activerecord.link.sending') } %>
<% end %>
